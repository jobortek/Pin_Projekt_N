@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}
<h1>All Roles</h1>
@if (Model.Any())
{
    <a class="btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controler="Administration">Add New Role</a>
    foreach(var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                <a href="#" class="btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
   <div class="card">
       <div class="card-header">
           No roles created yet
       </div>
       <div class="card-body">
           <h5 class="card-title">
               Use the button below to create a role.
           </h5>
           <a class="btn-primary btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">
               Create Role
           </a>
       </div>
   </div> 
}
